<h2 class="sub-header">Top 50 modules by downloads</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Module</th>
        <th>Total Downloads</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < modules.length; i++) { %>
      <tr>
        <td><a href='/module/<%= modules[i].name %>'><%= modules[i].name %></a></td>
        <td><%= modules[i].stats.total %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
